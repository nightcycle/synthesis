{
	"editor.formatOnSave": true,
	"files.autoSave": "onFocusChange",
	"luau-lsp.sourcemap.rojoProjectFile": "serve.project.json",
	"luau-lsp.types.robloxSecurityLevel": "LocalUserSecurity",
	"luau-lsp.require.mode": "relativeToFile",
	"luau-lsp.require.directoryAliases": {
		"@Project": "src",
		"@Package": "Packages",
		"@Component": "src/Component",
		"@Util": "src/Util",
	},
	"files.exclude": {
		"**lints": true,
		"**types": true,
		"sourcemap.json": true,
		"darklua-sourcemap.json": true,
		"synthetic.rbxl": true,
		"requirements.txt": true,
		"Packages": true,
	},
	"emeraldwalk.runonsave": {
		"shell": "C:\\Program Files\\Git\\bin\\bash.exe",
		"commands": [
			{
				"match": ".lua",
				"isAsync": false,
				"cmd": "rojo sourcemap dev.project.json --output sourcemap.json"
			},
			{
				"match": ".luau",
				"isAsync": false,
				"cmd": "rojo sourcemap dev.project.json --output sourcemap.json"
			},
			{
				"match": "pseudo-enum.toml",
				"isAsync": false,
				"cmd": "pseudo-enum build"
			},
			{
				"match": "wally.toml",
				"isAsync": false,
				"cmd": "sh scripts/workspace/wally-install.sh"
			},
		]
	}
}